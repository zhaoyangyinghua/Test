<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yihong.test.MainActivity">

    <TextView
        android:id="@+id/tv_animatorTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AnimationTest"
        android:textColor="#444"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_heap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="堆内存大小" />

    <TextView
        android:id="@+id/tv_memory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="内存溢出"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_listView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="listView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="列表对话框："
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_actionbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="actionbar："
        android:textSize="20sp" />


    <TextView
        android:id="@+id/tv_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="File文件"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Share分享"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_imagememory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="图片内存"
        android:textSize="20sp" />

</LinearLayout>
